<%- include('./partials/header') %>
<table class="table align-middle mb-0 bg-white">
  <thead class="bg-light">
    <tr>
      <th>Name</th>
      <th>Designation & City</th>
      <th>Status</th>
      <th>Province</th>
      <% if (isAuthenticated) { %>
      <th>Actions</th>
      <% } %>
    </tr>
  </thead>
  <tbody>
    <% employees.forEach(employee => { %>
    <tr>
      <td>
        <div class="d-flex align-items-center">
          <img
              src="/images/<%= employee.image %>"
              alt=""
              style="width: 45px; height: 45px"
              class="rounded-circle"
              />
          <div class="ms-3">
            
            <p class="fw-bold mb-1"><%= employee.name %></p>
            <p class="text-muted mb-0"><%= employee.email %></p>
          </div>
        </div>
      </td>
      <td>
        <p class="fw-normal mb-1"><%= employee.designation%></p>
        <p class="text-muted mb-0"><%= employee.district %></p>
      </td>
      <td>
        <span class="badge badge-success rounded-pill d-inline">Active</span>
      </td>
      <td><%= employee.province %></td>
      <% if (isAuthenticated) { %>
      <td>
       <a href='/edit/<%= employee._id %>'> <i class="fa-solid fa-pen-to-square"></i></a>
       <a href='/delete/<%= employee._id %>'> <i class="fa-solid fa-trash"></i></a>
      </td>
      <% } %>
      <% }) %>
    </tr>
       
  </tbody>
</table>
