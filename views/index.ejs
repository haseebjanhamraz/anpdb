<%- include('./partials/header') %>
<h1>ANP Official Cabinet List</h1>

<table class="table table-striped">
  <thead>
    <tr>
        <th>Image</th>
      <th>Name</th>
      <th>Contact Info</th>
      <th>Designation</th>
      <th>District</th>
      <% if (isAuthenticated) { %>
      <th>Actions</th>
      <% } %>
    </tr>
  </thead>
  <tbody>
    <% employees.forEach(employee => { %>
      <tr>
        <td><img src="/images/<%= employee.image %>" alt="Employee Image" class="employee-image"></td>
        <td><%= employee.name %></td>
        <td><%= employee.contact %></td>
        <td><%= employee.designation %></td>
        <td><%= employee.district %></td>
        <% if (isAuthenticated) { %>
        <td>
          <a href="/edit/<%= employee._id %>" class="btn btn-primary btn-sm">Edit</a>
          <a href="/delete/<%= employee._id %>" class="btn btn-danger btn-sm">Delete</a>
        </td>
        <% } %>
      </tr>
    <% }) %>
  </tbody>
</table>

<%- include('./partials/footer') %>
